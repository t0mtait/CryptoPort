                    </p>
                </form>
            </div>
        </div>
    </section>
    <script>
        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const error = urlParams.get('error'); // Retrieve the 'error' query parameter
        const instructions = urlParams.get('instructions'); // Retrieve the 'error' query parameter

        if (instructions === 'sent') 
        { 
            Swal.fire({
                title: 'Reset instructions sent!',
                icon: 'success',
                confirmButtonText: 'Login'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';  // Replace '/login' with the desired URL
                }
            });
        }

        
    </script>

        
    
