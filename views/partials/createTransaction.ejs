<form action="/createBuy" method="post">
    <div class="grid gap-6 mb-6 mt-2 p-3 rounded-full md:grid-cols-6 bg-gray-900">
        <div>
            <select name="asset" id="asset" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                <% assets.forEach(asset => { %>
                    <option value="<%= asset.id %>"><%= asset.name %></option>
                <% }) %>
            </select>
        </div>
        <div>
            <input type="number" step = "0.0000001" id="quantity" name = "quantity" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder = "Quantity" required />
        </div>  
        <div>
            <input type="number" step = "0.0000001" id="price" name = "price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buy Price (USD)" required />
        </div>
        <div>
            <input type="date" id="date" name="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" value="<%= new Date().toISOString().split('T')[0] %>" required />
        </div>
        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm w-full sm:w-auto px-2 py-2.5 text-center">Submit</button>
        <button type="button" id = "toggleMode" class="text-white bg-orange-500 hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm w-full sm:w-auto px-2 py-2.5 text-center">View Transactions</button>
    </div>
</form>

<script>
    document.getElementById('toggleMode').addEventListener('click', function() {
        document.getElementById('transactionHistory').classList.toggle('hidden');
        document.getElementById('userAssets').classList.toggle('hidden');
        document.getElementById('toggleMode').textContent = document.getElementById('toggleMode').textContent === 'View Transactions' ? 'View Wallet' : 'View Transactions';
    });
</script>
  